<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@layout/splash_screen</item>
    </style>

    <style name="White.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@layout/theme_white_noactionbar</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="VTextView" parent="android:Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/drawer_text_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:padding">@dimen/edittext_padding</item>
        <item name="android:layout_marginLeft">@dimen/edittext_padding</item>
    </style>

    <style name="VTextView.Default" parent="android:Widget.TextView">
        <item name="android:fontFamily">serif</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:paddingTop">@dimen/edittext_padding</item>
        <item name="android:paddingBottom">@dimen/edittext_padding</item>
        <item name="android:paddingLeft">@dimen/edittext_padding</item>
    </style>

    <style name="VTextView.State" parent="android:Widget.TextView">
        <item name="android:fontFamily">serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="android:paddingTop">@dimen/edittext_padding</item>
        <item name="android:paddingBottom">@dimen/edittext_padding</item>
    </style>

    <style name="VLinkTextView" parent="android:Widget.TextView">
        <item name="android:paddingTop">@dimen/edittext_padding</item>
        <item name="android:paddingRight">@dimen/edittext_padding</item>
        <item name="android:paddingBottom">@dimen/edittext_padding</item>
        <item name="android:paddingLeft">@dimen/general_margin</item>
        <item name="android:layout_marginLeft">@dimen/edittext_padding</item>
        <item name="android:textColor">@color/sky</item>
    </style>

    <style name="VButton" parent="android:Widget.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_default</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="VButton.Dialog.OK" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_dialog_ok</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:text">@string/dialog.ok</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="VButton.Dialog.CANCEL" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_dialog_cancel</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:text">@string/dialog.cancel</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="VButton.Skip" parent="android:Widget.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_skip</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">arial</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="VEditText" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edittext_default</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/textColorHint</item>
    </style>

</resources>
